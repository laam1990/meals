<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_meal"
    app:startDestination="@id/meals">

    <action
        android:id="@+id/action_to_mealDetail"
        app:destination="@id/mealDetail"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <action
        android:id="@+id/action_to_map"
        app:destination="@id/maps"
        app:enterAnim="@anim/fade_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/fade_out" />

    <fragment
        android:id="@+id/meals"
        android:name="com.example.yape.ui.fragment.MealFragment"
        tools:layout="@layout/fragment_meal_list"/>

    <fragment
        android:id="@+id/mealDetail"
        android:name="com.example.yape.ui.fragment.MealDetailFragment"
        tools:layout="@layout/fragment_meal_detail">
        <argument
            android:name="strMeal"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/maps"
        android:name="com.example.yape.ui.fragment.MapsFragment"
        tools:layout="@layout/fragment_maps">
        <argument
            android:name="LatLng"
            app:argType="com.example.yape.data.model.LatLngViewData" />
    </fragment>

</navigation>